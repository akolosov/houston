= simple_form_for @problem_solution, :html => { :class => 'form-horizontal form' } do |f|
  .form-header
    %h3= @form_title
  .form-inputs
    = f.association :problem, :include_blank => false, :label => "Проблема", :input_html => { :class => 'form-input' }
    = f.association :solution, :include_blank => false, :label => "Решение", :input_html => { :class => 'form-input' }
    = f.input :params, :label => "Параметры", :input_html => { :class => 'form-input' }
  .form-actions
    = f.submit @button_title, :class => "btn"
    = link_to 'Отмена', (params[:problem_id]? solutions_by_problem_path(Problem.find(params[:problem_id])) : problem_solutions_path), :class => "btn"
