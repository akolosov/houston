= form_for @attach do |f|
  - if @attach.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attach.errors.count, "error")} prohibited this attach from being saved:"
      %ul
        - @attach.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :mime
    = f.text_field :mime
  .field
    = f.label :size
    = f.number_field :size
  .actions
    = f.submit 'Save'
