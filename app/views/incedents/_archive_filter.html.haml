.pull-right.btn-group#buttons
  = make_archive_download_url(params[:type_id], params[:priority_id], params[:tag_id], params[:user_id])
  %a.btn.btn-mini{onclick: '$(\'#filter\').show(\'fast\'); $(\'#buttons\').hide();', title: 'Фильтр'}
    = glyph(:filter)+' Фильтр'
.form.form-horizontal.filter#filter
  .pull-right
    %i.icon-remove#close-button{onclick: '$(\'#filter\').hide(\'fast\'); $(\'#buttons\').show();', title: 'Закрыть'}
  .form-inputs
    - if current_user.has_role? :admin
      .row-fluid
        %small.span2 По пользователю:
        .btn-group.top-30
          - User.all.each do |user|
            = make_archive_user_filter_url(user, params[:type_id], params[:priority_id])
    .row-fluid
      %small.span2 По приоритету:
      .btn-group.top-30
        - Priority.all.each do |priority|
          = make_archive_priority_filter_url(priority, params[:type_id], params[:user_id])
    .row-fluid
      %small.span2 По типу:
      .btn-group.top-30
        - Type.all.each do |type|
          = make_archive_type_filter_url(type, params[:priority_id], params[:user_id])
    .row-fluid
      .pull-right.top-30
        = link_to 'Отменить все фильтры', incedents_archive_path, class: 'btn btn-mini'