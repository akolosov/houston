<%= simple_form_for @server_problem, :html => { :class => 'form-horizontal form' } do |f| %>
  <div class="form-header">
    <h3><%= @form_title %></h3>
  </div>

  <div class="form-inputs">
    <%= f.association :server, :input_html => { :class => 'form-input' } %>
    <%= f.association :problem, :input_html => { :class => 'form-input' } %>
  </div>

  <div class="form-actions">
    <%= f.submit @button_title, :class => "btn" %>
    <%= link_to 'Отмена', server_problems_path, :class => "btn" %>
  </div>
<% end %>
