:css
  .form-inputs {
    margin: 30px;
  }

%h3
  Известные проблемы #{(params[:server_id]? "для оборудования\""+Server.find(params[:server_id]).name+"\"" : "")}
.flickr_pagination
  =will_paginate @server_problems
- @server_problems.each do |server_problem|
  .form
    .form-header
      %h3= server_problem.problem.name
      .btn-group.pull-right
        = link_to 'Изменить', edit_problem_for_server_path(server_problem.server, server_problem), :class => 'btn btn-mini' if can? :manage, server_problem
        = link_to 'Удалить', server_problem, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini' if can? :destroy, server_problem
        = link_to 'Решения ('+server_problem.problem.solutions.count.to_s+')', solutions_for_problem_by_server_path(server_problem.server, server_problem.problem), :class => 'btn btn-mini' if can? :read, server_problem
    .form-inputs
      = raw RDiscount.new(server_problem.problem.description).to_html
  %br
  %br
.flickr_pagination
  =will_paginate @server_problems
= link_to 'Новая проблема для оборудования', (params[:server_id] ? problem_for_server_path(Server.find(params[:server_id])) : new_server_problem_path), :class => 'btn btn-mini' if can? :manage, ServerProblem
