<%= simple_form_for @user, :html => { :class => 'form-horizontal form' } do |f| %>
  <div class="form-header">
    <h3><%= @form_title %></h3>
  </div>
  <div class="form-inputs">
    <%= f.input :username, :input_html => { :class => 'form-input' } %>
    <%= f.input :email, :input_html => { :class => 'form-input' } %>
    <%= f.input :password, :input_html => { :class => 'form-input' } %>
    <%= f.input :password_confirmation, :input_html => { :class => 'form-input' } %>
    <%= f.association :roles, :input_html => { :class => 'form-input' } if current_user.has_role? :admin %>
  </div>
  <div class="form-actions">
    <%= f.submit @button_title, :class => "btn" %>
    <%= link_to 'Отмена', users_path, :class => 'btn' %>
  </div>
<% end %>
