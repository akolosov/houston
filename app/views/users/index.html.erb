<h3>Пользователи системы</h3>
<table class="table table-striped table-bordered table-condensed">
      <tr>
          <th>Имя</th>
          <th>E-mail</th>
          <th>Дата регистрации</th>
          <th>Роль</th>
          <th class="<%= ( (@current_user.has_role? :admin) ? 'span3' : 'span2' ) %>"></th>
      </tr>
  <% @users.each do |user| %>
    <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
        <td>
          <div class="btn-group">
            <% if current_user.has_role? :admin %>
              <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini">Роль</a><%= render user %>
            <% end %>
        	  <%= link_to 'Изменить', edit_user_path(user), :class => 'btn btn-mini' if can? :update, User %>
            <%= link_to("Удалить", user_path(user), :data => { :confirm => "Вы уверены?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %>
          </div>
        </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Новый пользователь', new_user_path, :class => 'btn btn-mini' if can? :manage, Command  %>

