<%= simple_form_for @problem, :html => { :class => 'form-horizontal form' } do |f| %>
  <div class="form-header">
    <h3><%= @form_title %></h3>
  </div>

  <div class="form-inputs">
    <%= f.input :name, :input_html => { :class => 'form-input' } %>
    <%= f.input :description, :input_html => { :class => 'form-input' } %>
  </div>

  <div class="form-actions">
    <%= f.submit @button_title, :class => "btn" %>
    <%= link_to 'Отмена', problems_path, :class => 'btn' %>
  </div>
<% end %>
